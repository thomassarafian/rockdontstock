<div class="container order-show">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag(@order.sneaker.photos[0].url, class: 'sneaker-show-photos') %>
      </div>
      <div class="carousel-item ">
        <%= image_tag(@order.sneaker.photos[1].url, class: 'sneaker-show-photos') %>
      </div>
      <div class="carousel-item ">
        <%= image_tag(@order.sneaker.photos[2].url, class: 'sneaker-show-photos') %>
      </div>
      <div class="carousel-item ">
        <%= image_tag(@order.sneaker.photos[3].url, class: 'sneaker-show-photos') %>
      </div>
      <div class="carousel-item ">
        <%= image_tag(@order.sneaker.photos[4].url, class: 'sneaker-show-photos') %>
      </div>
      <div class="carousel-item ">
        <%= image_tag(@order.sneaker.photos[5].url, class: 'sneaker-show-photos') %>
      </div>
      <% unless @order.sneaker.photos[6].nil? %>
        <div class="carousel-item ">
          <%= image_tag(@order.sneaker.photos[6].url, class: 'sneaker-show-photos') %>
        </div>
      <% end %>
      <% unless @order.sneaker.photos[7].nil? %>
        <div class="carousel-item ">
          <%= image_tag(@order.sneaker.photos[7].url, class: 'sneaker-show-photos') %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon sneaker-show-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon sneaker-show-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <p id="checkout_session_id" type="hidden"><%= @order.checkout_session_id  %></p>
  <h1>Commande #<%= @order.id %> <small><span class="badge badge-dark"> <%= @order.state %></span></small></h1>
  <ul class="list-unstyled">
    <li><strong>Commande pass√©e le</strong> <%= @order.created_at.to_date.strftime("%d/%m/%Y") %></li>
    <li><strong>Paire :</strong> <%= @order.sneaker.sneaker_db.name %></li>
    <% if @mondial_relay_price %>
      <li><strong>Livraison :</strong> <%= humanized_money_with_symbol @mondial_relay_price %></li>
    <% else %>
      <li><strong>Livraison :</strong> <%= humanized_money_with_symbol @colissimo_price %></li>
    <% end %>
      <li><strong>Authentification :</strong> <%= humanized_money_with_symbol @order.service / 2 %></li>
      <li><strong>Prix de la paire :</strong> <%= humanized_money_with_symbol @order.price %></li>
      <%# total = (@mondial_relay_price ? @mondial_relay_price : @colissimo_price) + @order_service + @order.price %>
      <!-- <li><strong>Total :</strong> <%#= humanized_money_with_symbol total %></li> -->
    </li>
  </ul>
</div>


<style type="text/css">
  .sneaker-show-photos {
    width: 500px;
    height: 500px;
  }
  .order-show {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  } 

</style>