<div class="container">
    <h2 class="title-login text-center">Se connecter</h2>
  <div class="row justify-content-center align-items-center">
    <div class="col-md-5 border-right">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Connexion", class: 'text-center btn btn-dark' %>
      <% end %>
    </div>
    <div class="col-md-5 omniauth text-left">
    <!-- <button class="facebook">Se connecter avec Facebook</button> -->
      <%= render "devise/shared/links" %>
    </div>
  </div>
    <div class="signup_button">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "CrÃ©er un compte", new_registration_path(resource_name) %><br />
      <% end %>
    </div>
</div>

