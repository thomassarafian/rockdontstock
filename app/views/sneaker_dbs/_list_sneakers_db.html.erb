<div class="sneaker-cards">
  <% @results&.each do |sneaker_db| %>
    <%= link_to new_sneaker_path(sneaker_db: sneaker_db), class: "sneaker-card", remote: true do %>
      <div class="sneaker-db-card-img">
        <%= image_tag(sneaker_db.img_url, style: 'width: 100%; justify-content:center;') %>
      </div>
      <div class="sneaker-title">
        <strong><%= sneaker_db.name %></strong>
      </div>
    <% end %>
  <% end %>
</div>
<%== pagy_bootstrap_nav_js(@pagy) if @pagy %>
<div class="form-add-new-sneakerdb">
  <hr>
  <h2>Si tu ne trouves pas ton mod√®le dans la liste, ajoute-le ci-dessous :</h2>
  <form id="addNewSneakerDb" action="/sneaker_dbs/" data-remote="true" method="post" >
    <input class="form-control add-sneaker-db-name" required type="text"  placeholder="Adidas Yeezy Boost 700 Wave Runner Solid Grey" name="add_sneaker_db">
    <input type="submit" value="Ajouter ma paire" class="btn btn-dark">
  </form>
</div>

