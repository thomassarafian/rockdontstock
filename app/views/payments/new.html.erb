<style type="text/css">

  .point-picker-btn, .address-btn, .recap-payment-btn {
    height: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .adress_form, .point-picker {
    display: none;
  }
  .toggle-hidden {
    display: block;
  }
  .delivery-cliked {
    background-color: black;
    color: white;
    border-radius: 5px;
    padding: 0 5px;
  }

  .delivery-brand {
    display: flex;
    justify-content: space-between;
  }
  .circles {
    display: flex;
    justify-content: space-evenly;
  }
  .circle-step {
    text-align: center;
  }
  
  .sneaker-payment-title {
    text-align:center;
  }
