<script type="text/javascript">
  document.addEventListener('turbolinks:load', () => {
  function launchTimerToWaitStripeSession() {
    let i = 7;
    document.getElementById('payBtnWaitMessage').style.display = "block";
    document.getElementById('waitTimer10s').textContent = i;
    i--;
    setInterval( function () {
      if (i >= 0) {
        document.getElementById('waitTimer10s').textContent = i;
        i--;
      }
    },1000);
    setTimeout(function() {
      fetch("/orders/<%= @order.id  %>")
        .then(response => response.text())
        .then(data => document.getElementById("ajax_request_content").outerHTML = data);
        setTimeout(function() {
          document.getElementById('pay_button').removeAttribute("disabled");
          document.getElementById('payBtnWaitMessage').style.display = "none";
        }, 2000);
    }, 5000);

  }
  if (document.querySelector('#recap_form_btn')) {
    document.querySelector('#recap_form_btn').addEventListener('click', (event) => {
      const recapPaymentMondialRelayBtn = document.querySelector('.recap-payment-mondial-relay-btn');
      const recapPaymentColissimoBtn = document.querySelector('.recap-payment-colissimo-btn');
      console.log(recapPaymentMondialRelayBtn);
      console.log(recapPaymentColissimoBtn);
      if (recapPaymentMondialRelayBtn) {
        console.log('On mondial relay !');
        document.querySelector('.black-circle-logo').data = "/assets/payment/white_circle.svg";
        document.querySelectorAll(".white-circle-logo")[0].data = "/assets/payment/black_circle.svg";
        document.querySelector('.payment-new-delivery-step').style.display = "none";
        document.querySelector('.resume-payment-infos').style.display = "block";
        launchTimerToWaitStripeSession()
        document.querySelector('.resume-delivery-infos').appendChild(document.querySelector('.payment-display-address').children[1]);
        if (document.querySelector('.point-picker-result').children[1]) {
          document.querySelector('.resume-delivery-infos').appendChild(document.querySelector('.point-picker-result').children[1]);
        }
        document.querySelector('.payment-delivery-price').textContent = "<%= @mondial_relay_price %>€"
        let mondial_relay_price = "<%= @mondial_relay_price %>".replace(',', '.');
        let mondial_relay_order_price = "<%= @order.sneaker.price %>".replace(',', '.');
        let mondial_relay_service_price =  "<%= @order.service / 2 %>".replace(',', '.');

        
        let totalMondialRelay = parseFloat(mondial_relay_price)
                              + parseFloat(mondial_relay_order_price)
                              + parseFloat(mondial_relay_service_price)
        console.log(totalMondialRelay.toFixed(2))
        document.querySelector('.payment-total-price').textContent = totalMondialRelay.toFixed(2);
      }
      if (recapPaymentColissimoBtn) {
        console.log('On colissimo !');
        document.querySelector('.black-circle-logo').data = "/assets/payment/white_circle.svg";
        document.querySelectorAll(".white-circle-logo")[0].data = "/assets/payment/black_circle.svg";
        document.querySelector('.payment-new-delivery-step').style.display = "none";
        document.querySelector('.resume-payment-infos').style.display = "block";
        launchTimerToWaitStripeSession()
        document.querySelector('.resume-delivery-infos').appendChild(document.querySelector('.payment-display-address').children[1]);
        document.querySelector('.payment-delivery-price').textContent = "<%= @colissimo_price %>€"
        
        let colissimo_price = "<%= @colissimo_price %>".replace(',', '.');
        let colissimo_order_price = "<%= @order.sneaker.price %>".replace(',', '.');
        let colissimo_service_price = "<%= @order.service / 2 %>".replace(',', '.');

        let totalColissimo = parseFloat(colissimo_price)
                            + parseFloat(colissimo_order_price)
                            + parseFloat(colissimo_service_price)

        console.log(totalColissimo.toFixed(2))
        document.querySelector('.payment-total-price').textContent = totalColissimo.toFixed(2);
        
      }
    });
  };
});
</script>

