          <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag(@order.sneaker.photos[0].url, class: 'sneaker-show-photos') %>
          </div>
          <!-- <div class="carousel-item ">
            <%#= cl_image_tag(@sneaker.photos[1].key, class: 'sneaker-show-photos') %>
          </div>
          <div class="carousel-item ">
            <%#= cl_image_tag(@sneaker.photos[2].key, class: 'sneaker-show-photos') %>
          </div>
          <div class="carousel-item ">
            <%#= cl_image_tag(@sneaker.photos[3].key, class: 'sneaker-show-photos') %>
          </div>
          <div class="carousel-item ">
            <%#= cl_image_tag(@sneaker.photos[4].key, class: 'sneaker-show-photos') %>
          </div> -->
          <!-- <div class="carousel-item ">
            <%#= cl_image_tag(@sneaker.photos[5].key, class: 'sneaker-show-photos') %>
          </div>
          <div class="carousel-item ">
            <%#= cl_image_tag(@sneaker.photos[6].key, class: 'sneaker-show-photos') %>
          </div>
          <div class="carousel-item ">
            <%#= cl_image_tag(@sneaker.photos[7].key, class: 'sneaker-show-photos') %>
          </div> -->
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon sneaker-show-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon sneaker-show-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="col sneaker-payment-infos">
        <p><strong><%= @order.sneaker.sneaker_db.name %></strong></p> 
        <p>Taille : <%= @order.sneaker.size %> US</p>
        <p>Condition : <%= @order.sneaker.condition %> / 10</p>
        <p>Prix : <strong><%= humanized_money_with_symbol @order.price %></strong></p>
      </div>
    </div>
  
    


    <div class="payment-input-info">
      <div class="circles">
       <p class="circle-step"><%= image_tag("payment/black_circle.svg", class: 'black-circle-logo') %><br>Livraison</p>
       <p class="circle-step"><%= image_tag("payment/white_circle.svg", class: 'white-circle-logo') %><br>Récapitulatif</p>
       <p class="circle-step"><%= image_tag("payment/white_circle.svg", class: 'white-circle-logo') %><br>Paiement</p>
      </div>
      <div class="resume-payment-infos">
        <p><strong>Livraison</strong></p>
        <div class="resume-delivery-infos"></div>
        <br>
        <p class="resume-prices">Prix de l'article : <span class="payment-article-price"><%= @order.price %> €</span></p>
        <p class="resume-prices">Livraison : <span class="payment-delivery-price"><%= @order.shipping_cost %> €</span></p>
        <p class="resume-prices">Authentification : <span class="payment-service-price"><%= @order.service / 2 %> €</span></p>
        <br>
        <% total =  (@order.price + @order.shipping_cost + (@order.service / 2)) %>
        <strong><p class="resume-prices">TOTAL <span class="payment-total-price"><%= total %> €</span></p></strong>
        <button type="button" class="pay_button btn btn-dark">Paiement</button>
      </div>
      <div class="payment-new-delivery-step">
        <h5>Choix du point relais</h5>
        <hr>
        <div class="payment-delivery">
          <div>
            <p class="delivery-brand mondial-relay"><span class="delivery-name-mondial-relay">Mondial Relay</span><span>6,30€</span></p>
            <p class="delivery-brand colissimo"><span class="delivery-name-colissimo">Colissimo</span><span>6,30€</span></p>
            <p class="delivery-brand chronopost"><span class="delivery-name-chronopost">Chronopost</span><span>13,45€</span></p>
          </div>
          <h5>Choix du point relais</h5>
          <hr>

          <div class="adress_form" data-controller="address">
            <%= simple_form_for(current_user, html: {method: :PATCH }, remote: true, data: {target: "address.form", id: current_user.id }, id: 'adress-form') do |f| %>
              <%= f.input :line1, label: 'Mon adresse', input_html: { data: {target: 'address.line1'} }, required: true  %>
              <%= f.input :city, input_html: { data: { target: 'address.city'} },required: true, as: :hidden %>
              <%= f.input :postal_code, input_html: { data: { target: 'address.postal_code'} }, required: true, as: :hidden %>
              <button type="button" class="address-btn btn btn-dark">
                <%= f.button :submit, "Confirmer mes informations", data: { action: "click->address#refresh" }, style: 'color:white;' %>
              </button>
            <% end %>
            <div  class="payment-display-address" data-target="address.display_address"></div>
            <div data-target="address.next_btn"></div>
          </div>
          
          <div class="point-picker"> 
            <button type="button" class="point-picker-btn btn btn-dark" id="select_point_picker">Choix du point relais</button>
            <div class="point-picker-result"></div>
          </div>
        </div>
        <button type="button" class="recap-payment-btn btn btn-dark">Récapitulatif</button>
      </div>
        
      <%= simple_form_for(current_user, remote: true, url: user_path) do |f| %>
        <%= f.input :picker_data, as: :hidden, :input_html => { :value => "none"} %>
      <% end %>
      
    </div>    
    </div>
  </div>
</div>


<script type="text/javascript">
  
  const recapPaymentBtn = document.querySelector('.recap-payment-btn');
  if (recapPaymentBtn) {
    document.querySelector('.recap-payment-btn').addEventListener('click', (event) => {
      document.querySelector('.black-circle-logo').src = "/assets/payment/white_circle.svg";
      document.querySelectorAll(".white-circle-logo")[0].src = "/assets/payment/black_circle.svg";
      document.querySelector('.payment-new-delivery-step').style.display = "none";
      document.querySelector('.resume-payment-infos').style.display = "block";
      document.querySelector('.resume-delivery-infos').appendChild(document.querySelector('.payment-display-address').children[1]);
      if (document.querySelector('.point-picker-result').children[1]) {
        document.querySelector('.resume-delivery-infos').appendChild(document.querySelector('.point-picker-result').children[1]);
      }
    })
  }



</script>

<style type="text/css">
  .resume-prices {
    display: flex;
    justify-content: space-between;
  }
  .point-picker-btn, .address-btn, .recap-payment-btn, .pay_button {
    height: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .adress_form, .point-picker, .recap-payment-btn, .resume-payment-infos {
    display: none;
  }
  .toggle-hidden {
    display: block;
  }
  .delivery-cliked {
    background-color: black;
    color: white;
    border-radius: 5px;
    padding: 0 5px;
  }

  .delivery-brand {
    display: flex;
    justify-content: space-between;
  }
  .circles {
    display: flex;
    justify-content: space-evenly;
  }
  .circle-step {
    text-align: center;
  }
  
  .sneaker-payment-title {
    text-align:center;
  }
  .sneaker-payment-infos {
    padding: 20px 0;
    text-align: center;
  }
  .sneaker-payment-photos {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .sneaker-payment {
    margin: 50px auto 20px auto;
  }
</style>

<script type="text/javascript">
  const paymentButton = document.querySelector('.pay_button');
  if (paymentButton != undefined)
  {
    paymentButton.addEventListener('click', () => {
      var stripe = Stripe('<%= ENV['STRIPE_PUBLIC_TEST'] %>', {
      });
      stripe.redirectToCheckout({
        sessionId: '<%= @order.checkout_session_id  %>'
      });
    });
  }
</script>

