<%= simple_form_for(sneaker.new_record? ? [sneaker_db, sneaker] : sneaker) do |f| %>
	<%= f.label :size, "Taille US" %>
	<%= f.text_field :size, required: true %>

	<%= f.label :price, "Prix" %>
	<%= f.text_field :price, required: true %>

	<%#= f.label :condition, "Condition" %>
	<%= f.input :condition, collection: 1..10, required: true %>

	<%#= f.label :box, "Box" %>
	<%= f.input :box, collection: ["Og Box", "Boite de remplacement", "Pas de boite"], required: true %>

	<%= f.label :extras, "Extras" %>
	<%= f.text_field :extras, required: true %>

  <%= f.input :photos, as: :file,
  input_html: {multiple: true, class: "hidden", id: 'photo-input'},
  label_html: { class: 'upload-photo' },
  label: 'ðŸ“· Upload a photo' %>


  <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>

  <%= f.submit %>
<% end %>