<title>Ajoute ta paire - Rock Don't Stock</title>

<div class="container search-sneaker-model">
  <div class="search-models">
    <div class="sell-wizard__subtitle">Etape 1</div>
    <h2 class="sell-wizard__title">Vendre ma paire</h2>
    <div class="sell-wizard__progress">
      <div class="sell-wizard__progress__step">
        <div class="sell-wizard__progress__step-title">Modèle</div>
        <div class="sell-wizard__progress__step-display"></div>
      </div>
      <div class="sell-wizard__progress__step">
        <div class="sell-wizard__progress__step-title">Informations</div>
        <div class="sell-wizard__progress__step-display"></div>
      </div>
      <div class="sell-wizard__progress__step">
        <div class="sell-wizard__progress__step-title">Photos</div>
        <div class="sell-wizard__progress__step-display"></div>
      </div>
      <div class="sell-wizard__progress__step">
        <div class="sell-wizard__progress__step-title">Récapitulatif</div>
        <div class="sell-wizard__progress__step-display"></div>
      </div>
    </div>
    <div style="font-weight: 700">Recherche la paire que tu souhaites vendre</div>
    <%= form_with url: sneaker_dbs_path, method: :get, local: false, html: { class: 'search-sneaker-model-form my-2' } do |f| %>
      <div style="position: relative; width: 380px">
        <%= f.text_field :search, class: "form-control", placeholder: "Adidas Yeezy Boost 350 v2 Bred...", id: 'search_sneaker_name' %>
        <%= image_tag "images/lens.svg", style: "position: absolute; right: 0.5rem; top: 0; transform: translateY(50%)" %>
      </div>
      <%= f.hidden_field :sneaker_id, value: @sneaker.id %>
    <% end %>
    <a href="#">Je ne trouve pas ma paire</a>
    <div id="form-content">
      <%= render partial: 'sneaker_dbs/list_sneakers_db' %>
    </div>
  </div>
</div>
