<title>Ajoute ta paire - Rock Don't Stock</title>

<div class="container search-sneaker-model">
  <div class="search-models">
    <div class="sale-wizard__subtitle"></div>
    <h2 class="sale-wizard__title">Recherche la paire que tu souhaites vendre</h2>
    <div class="sale-wizard__progress">
      <div>
        <div class="sale-wizard__progress__title">Modèle</div>
        <div class="sale-wizard__progress__display"></div>
      </div>
      <div>
        <div class="sale-wizard__progress__title">Informations</div>
        <div class="sale-wizard__progress__display"></div>
      </div>
      <div>
        <div class="sale-wizard__progress__title">Photos</div>
        <div class="sale-wizard__progress__display"></div>
      </div>
      <div>
        <div class="sale-wizard__progress__title">Récapitulatif</div>
        <div class="sale-wizard__progress__display"></div>
      </div>
    </div>
    <%= form_with url: sneaker_dbs_path, method: :get, local: false, html: { class: 'search-sneaker-model-form' } do |f| %>
      <%= f.text_field :search, class: "form-control", placeholder: "Recherche ta paire", id: 'search_sneaker_name' %>
    <% end %>
    <div id="form-content">
      <%= render partial: 'sneaker_dbs/list_sneakers_db' %>
    </div>
  </div>
</div>
<%= link_to 'next', next_wizard_path %>

