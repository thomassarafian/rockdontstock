<%#shoes_size = {
	6.0=>39,
	6.5=>39,
	7.0=>40,
	7.5=>40.5,
	8.0=>41,
	8.5=>42,
	9.0=>42.5,
	9.5=>43,
	10.0=>44,
	10.5=>44.5,
	11.0=>45,
	11.5=>46,
	12.0=>46.5,
	12.5=>47
}%>

<h1><%= @sneaker.name %></h1>

<% @sneaker.photos.each do |photo|	%>
	<% if photo.content_type.match(*"heic") %>
		<%= cl_image_tag photo.key, :format => :png, height: 300, width: 300, crop: :fill%>
	<% else %>
		<%= cl_image_tag photo.key,  :transformation=>[
		  {y: 110, :width=>600, :height=>300, :crop=>"crop"}
		  ]  %>

	<% end %>
<% end %>

<p>Taille : <%=	@sneaker.size %> FR</p> <%#= US (shoes_size[@sneaker.size] FR)%>


<p>Prix : <%= humanized_money_with_symbol(@sneaker.price) %></p>
<p>Condition : <%= @sneaker.condition %>/10</p>
<p>Box : <%= @sneaker.box %></p>
<p>Extras : <%= @sneaker.extras %></p>

<%= form_tag orders_path do %>
  <%= hidden_field_tag 'sneaker_id', @sneaker.id %>
  <%= submit_tag 'Acheter', class: 'btn btn-primary' %>
<% end %>

<% if policy(@sneaker).edit? %>
	<p><%= link_to "Modifier #{@sneaker.name}", edit_sneaker_path(@sneaker) %></p>
	<p><%=	link_to "MODIFIE TON PROFIL", edit_user_registration_path(current_user) %></p>
<% end %>

<% if policy(@sneaker).destroy? %>
	</p><%=	link_to "Supprimer", sneaker_path(@sneaker), method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>		


