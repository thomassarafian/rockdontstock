<div class="auth-modal__subtitle">Le guide gratuit</div>
<h2 class="auth-modal__guide-name"></h2>
<div class="auth-modal__form">
  <%= form_for :user, url: guide_request_path do |f| %>
    <%= f.hidden_field :guide_id %>
    <div class="row g-2">
      <div class="col">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Nom" %>
      </div>
      <div class="col">
        <%= f.text_field :first_name, class: "form-control", placeholder: "PrÃ©nom" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %>
    </div>
    <div class="row g-2">
      <div class="col-4">
        <%= f.text_field :date_of_birth, class: "form-control", placeholder: "Date de naissance", onfocus: "(this.type='date')", onblur: "(this.type='text')"%>
      </div>
      <div class="col">
        <%= f.text_field :city, class: "form-control", placeholder: "Ville" %>
      </div>
    </div>
    <button type="submit" class="auth-modal__form__submit">Recevoir mon guide</button>
  <% end %>
</div>