<div class="laptop-search-navbar">
  <div class="list-sneakers-cards" data-refresh-list-target="list">
    <div class="popup-search" id="records_table">
      <div class="sneaker-cards">
        <% sneaker_dbs.all.limit(10).each do |sneaker| %>
            <div class="sneaker-card" id="sneaker-card-search">
              <%= link_to sneaker_db_path(sneaker), :style=>'color:#000000; align-items: center;' do %>
                <div class="sneaker-card_img">
                  <%= image_tag(sneaker.img_url, style: 'object-fit: scale-down;width: 130px;justify-content: center;height: 130px;') %>
                </div>
              <% end %>
                <div class="sneaker-title"><strong><%= sneaker.name %></strong></div>
                <div class="sneaker-price">À partir de <%= sneaker.price_cents %>€</div>
            </div>
        <% end %>
      </div>
    </div>

      
    <% if @pagy.page < @pagy.last %>
      <div
          data-controller="infinite-scroll"
          data-infinite-scroll-next-url="<%= root_path(page: @pagy.page + 1) %>">
          <div class="sneaker-cards-btn">
        <%= link_to(params[:query].nil? ? searchs_path : searchs_path + "?query=" + params[:query]) do %>
          Tout voir
        <% end %>
      </div>
      </div>
    <% end %>

  </div>
</div>

<style type="text/css">
  .laptop-search-navbar {
    height: 100%;
    left: 0px;
    background-color: white;  
    position: absolute;
  }

</style>