#!/usr/bin/env ruby
# This file loads Spring only if it's available in the bundle
begin
  load File.expand_path('../spring', __FILE__)
rescue LoadError => e
  # Spring is not available (common in production)
  # This is fine, continue without Spring
end

APP_PATH = File.expand_path('../config/application', __dir__)
require_relative "../config/boot"
require "rails/commands"
